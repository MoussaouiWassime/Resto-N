{% extends 'base.html.twig' %}

{% block title %}Supprimer {{ restaurant.name }}{% endblock %}

{% block main %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card border-danger shadow">
                    <div class="card-header bg-danger text-white text-center py-3">
                        <h4 class="mb-0">Suppression</h4>
                    </div>

                    <div class="card-body text-center p-4">

                        <h5 class="fw-bold">Supprimer "{{ restaurant.name }}" ?</h5>
                        <p class="text-muted">
                            Cette action supprimera également tous les plats, commandes et réservations associés.<br>
                        </p>

                        {{ form_start(form) }}
                        <div class="d-grid gap-3 mt-4">
                            {{ form_widget(form.cancel, {
                                label: 'Non, annuler',
                                attr: {class: 'btn btn-secondary btn-lg'}
                            }) }}

                            {{ form_widget(form.delete, {
                                label: 'Oui, tout supprimer',
                                attr: {class: 'btn btn-danger'}
                            }) }}
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
