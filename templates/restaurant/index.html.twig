{% extends 'base.html.twig' %}

{% block title %}Nos Restaurants{% endblock %}

{% block main %}
    <div class="container py-5">

        {% if not search %}
            <div class="text-center mb-5">
                <h1 class="fw-bold text-secondary">D√©couvrez nos tables</h1>
                <p class="lead text-muted">R√©servez ou commandez parmi les meilleurs restaurants.</p>
            </div>
        {% endif %}

        {% if search %}
            <h2 class="h4 mb-4">üîç R√©sultats pour : "<span class="text-primary">{{ search }}</span>"</h2>

            {% if restaurants is empty %}
                <div class="alert alert-info text-center py-5">
                    <h4>üòï Aucun r√©sultat</h4>
                    <p>Essayez une autre recherche ou parcourez nos cat√©gories.</p>
                    <a href="{{ path('app_restaurant') }}" class="btn btn-outline-primary mt-3">Voir tout</a>
                </div>
            {% else %}
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
                    {% for restaurant in restaurants %}
                        {{ include('restaurant/_card.html.twig') }}
                    {% endfor %}
                </div>
            {% endif %}

        {% else %}
            {% for category in categories %}
                {% if category.restaurants is not empty %}
                    <section class="mb-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h3 class="h4 fw-bold text-dark mb-0">{{ category.name }}</h3>
                            <span class="badge bg-light text-dark border">{{ category.restaurants|length }} lieux</span>
                        </div>

                        <div class="d-flex flex-nowrap overflow-auto pb-4 gap-4" style="scroll-behavior: smooth;">
                            {% for restaurant in category.restaurants %}
                                <div style="min-width: 280px; max-width: 280px;">
                                    {{ include('restaurant/_card.html.twig') }}
                                </div>
                            {% endfor %}
                        </div>
                    </section>
                {% endif %}
            {% else %}
                <div class="text-center py-5 text-muted">
                    <p>Aucune cat√©gorie disponible pour le moment.</p>
                </div>
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}
