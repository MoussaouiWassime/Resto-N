{% extends 'base.html.twig' %}

{% block title %}Nouveau Produit{% endblock %}

{% block main %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">

                <div class="card shadow border-0">
                    <div class="card-header bg-info text-white py-3 text-center">
                        <h5 class="mb-0">✨ Nouveau Produit Global</h5>
                    </div>

                    <div class="card-body p-4">
                        <div class="alert alert-warning border-warning d-flex align-items-start mb-4">
                            <span class="fs-4 me-3">⚠️</span>
                            <div class="small">
                                <strong>Important :</strong> Ce produit sera ajouté à la base de données commune de Resto'N. Il sera visible par tous les restaurateurs.
                            </div>
                        </div>

                        {{ form_start(form) }}

                        <div class="mb-3">
                            {{ form_row(form.productName, {
                                label: 'Nom du produit',
                                attr: {placeholder: 'Ex: Huile d\'olive Extra Vierge', class: 'form-control-lg'}
                            }) }}
                        </div>

                        <div class="mb-4">
                            {{ form_row(form.category, {
                                label: 'Catégorie',
                                attr: {class: 'form-select'}
                            }) }}
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-info text-white btn-lg shadow-sm">Créer le produit</button>
                            <a href="{{ path('app_stock_add_list', {id: restaurant.id}) }}" class="btn btn-outline-secondary">Annuler</a>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
