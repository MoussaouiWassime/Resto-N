{% extends 'base.html.twig' %}

{% block title %}
    Suppression de la commande numéro {{ order.id }} du client {{ order.user.lastName }} {{ order.user.firstName }}
{% endblock %}

{% block main %}
    <div class="container mt-3">
        <h1 class="h3 fw-bold mb-4">Suppression de la commande numéro {{ order.id }}</h1>

        {{ form_start(form, {attr: {class: 'd-flex justify-content-evenly'}}) }}

        {{ form_row(form.delete, {
            label: 'Supprimer',
            attr: {class: 'btn btn-primary'},
        })
        }}

        {{ form_row(form.cancel, {
            label: 'Annuler',
            attr: {class: 'btn btn-secondary'},
        })
        }}

        {{ form_rest(form) }}

        {{ form_end(form) }}
    </div>

{% endblock %}
