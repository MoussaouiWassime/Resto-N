{% extends 'base.html.twig' %}

{% block title %}Annuler la réservation{% endblock %}

{% block main %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card border-danger shadow">
                    <div class="card-header bg-danger text-white">
                        <h4 class="mb-0">Confirmation d'annulation</h4>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            Êtes-vous sûr de vouloir annuler cette réservation ?
                            <br>
                            La table sera libérée pour d'autres clients.
                        </div>

                        <h5 class="mt-4">Détails :</h5>
                        <ul class="list-group mb-4">
                            <li class="list-group-item"><strong>Restaurant :</strong> {{ reservation.restaurant.name }}</li>
                            <li class="list-group-item"><strong>Date :</strong> {{ reservation.reservationDate|date('d/m/Y à H:i') }}</li>
                            <li class="list-group-item"><strong>Couverts :</strong> {{ reservation.numberOfPeople }} personnes</li>
                        </ul>

                        {{ form_start(form) }}
                        <div class="d-flex justify-content-between">
                            {{ form_widget(form.return) }}
                            {{ form_widget(form.confirm) }}
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
