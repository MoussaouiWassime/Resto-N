{% extends 'base.html.twig' %}

{% block title %}Catalogue Produits{% endblock %}

{% block main %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="h4 fw-bold mb-0">üîç Ajouter au stock</h2>
                    <a href="{{ path('app_stock_index', {id: restaurant.id}) }}" class="btn btn-link text-secondary text-decoration-none">
                        Annuler
                    </a>
                </div>

                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-body p-2">
                        <form method="get" class="d-flex gap-2">
                            <input type="text" name="q" class="form-control border-0 shadow-none form-control-lg" placeholder="Rechercher (ex: Farine, Tomates...)" value="{{ searchText }}">
                            <button type="submit" class="btn btn-primary px-4 rounded">Chercher</button>
                        </form>
                    </div>
                </div>

                {% if searchText %}
                    <div class="mb-3 d-flex justify-content-between align-items-center">
                        <span class="text-muted small">R√©sultats pour "<strong>{{ searchText }}</strong>"</span>
                        <a href="{{ path('app_stock_add_list', {id: restaurant.id}) }}" class="badge bg-secondary text-decoration-none">‚úñ Effacer</a>
                    </div>
                {% endif %}

                <div class="alert alert-info border-0 shadow-sm d-flex align-items-center justify-content-between mb-4">
                    <div class="d-flex align-items-center">
                        <span class="fs-4 me-3">‚ú®</span>
                        <div class="small lh-sm">
                            <strong>Produit introuvable ?</strong><br>
                            Cr√©ez une nouvelle fiche produit dans la base globale.
                        </div>
                    </div>
                    <a href="{{ path('app_product_new', {id: restaurant.id}) }}" class="btn btn-sm btn-light text-info fw-bold border">
                        Cr√©er un produit
                    </a>
                </div>

                <div class="list-group shadow-sm rounded-3 border-0">
                    {% for product in products %}
                        <div class="list-group-item p-3 d-flex justify-content-between align-items-center action-hover">
                            <div>
                                <h6 class="mb-1 fw-bold text-dark">{{ product.productName }}</h6>
                                <span class="badge bg-light text-secondary border">{{ product.category.name }}</span>
                            </div>
                            <a href="{{ path('app_stock_create', {id: restaurant.id, productId: product.id}) }}" class="btn btn-success btn-sm rounded-pill px-3">
                                + Ajouter
                            </a>
                        </div>
                    {% else %}
                        <div class="text-center py-5 bg-white rounded-3">
                            <p class="text-muted mb-0">Aucun produit trouv√© dans le catalogue.</p>
                        </div>
                    {% endfor %}
                </div>

            </div>
        </div>
    </div>
{% endblock %}
