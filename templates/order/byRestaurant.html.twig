{% extends 'base.html.twig' %}

{% block title %}Cuisine - {{ restaurant.name }}{% endblock %}

{% block main %}
    <div class="container-fluid mt-4 px-4">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>üë®‚Äçüç≥ Commandes en cours : <span class="text-primary">{{ restaurant.name }}</span></h2>
            <a href="{{ path('app_restaurant_manage', {id: restaurant.id}) }}" class="btn btn-secondary">‚Üê Retour Gestion</a>
        </div>

        <div class="row">
            {% for order in orders %}
                <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
                    <div class="card h-100 shadow-sm {{ order.status.value == 'A' ? 'border-danger opacity-75' : 'border-primary' }}">

                        <div class="card-header d-flex justify-content-between align-items-start {{ order.status.value == 'A' ? 'bg-danger text-white' : 'bg-light' }}">
                            <div>
                                <strong class="d-block fs-5">
                                    {% if order.user %}
                                        {{ order.user.lastName }} {{ order.user.firstName|first }}.
                                    {% else %}
                                        Client #{{ order.id }}
                                    {% endif %}
                                </strong>
                                <small>{{ order.orderDate|date('H:i') }}</small>
                            </div>
                            <div class="text-end">
                                {% if order.orderType.value == 'L' %}
                                    <span class="badge bg-warning text-dark">üöö Livr.</span>
                                {% elseif order.orderType.value == 'E' %}
                                    <span class="badge bg-info text-dark">üõçÔ∏è Emp.</span>
                                {% else %}
                                    <span class="badge bg-primary">üçΩÔ∏è Place</span>
                                {% endif %}
                            </div>
                        </div>

                        <div class="card-body">
                            {% if order.orderType.value == 'L' %}
                                <div class="alert alert-warning py-2 small mb-3">
                                    üìç {{ order.deliveryAddress }}<br>
                                    {{ order.deliveryPostalCode }} {{ order.deliveryCity }}
                                </div>
                            {% endif %}

                            <ul class="list-group list-group-flush">
                                {% set total = 0 %}
                                {% for item in order.orderItems %}
                                    <li class="list-group-item px-0 d-flex justify-content-between align-items-center">
                                        <span class="fw-bold fs-5 badge bg-light text-dark border">{{ item.quantity }}</span>
                                        <span class="ms-2 flex-grow-1">{{ item.dish.name }}</span>
                                    </li>
                                    {% set total = total + (item.dish.price * item.quantity) %}
                                {% endfor %}
                            </ul>
                        </div>

                        <div class="card-footer bg-white">
                            <div class="d-flex justify-content-between fw-bold fs-5 mb-3">
                                <span>Total</span>
                                <span>{{ total / 100 }} ‚Ç¨</span>
                            </div>

                            <div class="d-grid gap-2">
                                {% if order.status.value != 'A' %}
                                    <a href="{{ path('app_order_cancel', {id: order.id}) }}" class="btn btn-outline-danger btn-sm">
                                        ‚úñ Annuler Commande
                                    </a>
                                {% else %}
                                    <button disabled class="btn btn-danger btn-sm w-100">ANNUL√âE</button>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12 text-center py-5">
                    <h3 class="text-muted">Aucune commande pour le moment</h3>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
