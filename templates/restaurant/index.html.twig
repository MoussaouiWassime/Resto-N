{% extends 'base.html.twig' %}

{% block title %}Restaurants{% endblock %}

{% block main %}
    <div class="container py-4">

        {% if search %}
            <h2 class="h4 mb-4">Résultats pour : "{{ search }}"</h2>

            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
                {% for restaurant in restaurants %}
                    <div class="col">
                        <div class="card h-100 border-0">
                            <div class="ratio ratio-16x9 card-img-top bg-light">
                                {% if restaurant.image %}
                                    <img src="{{ asset('images/restaurants/' ~ restaurant.image) }}" class="object-fit-cover" alt="{{ restaurant.name }}">
                                {% else %}
                                    <div class="d-flex align-items-center justify-content-center text-muted">
                                        <small>Pas d'image</small>
                                    </div>
                                {% endif %}
                            </div>

                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title h6 fw-bold text-truncate">{{ restaurant.name }}</h5>
                                <p class="card-text small text-muted text-truncate">{{ restaurant.description }}</p>

                                <div class="mt-auto d-grid gap-2">
                                    <a href="{{ path('app_order_create', {id: restaurant.id}) }}" class="btn btn-primary">Commander</a>
                                    <a href="{{ path('app_restaurant_show', {id: restaurant.id}) }}" class="btn btn-outline-secondary btn-sm">Détails</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12">
                        <div class="alert alert-info">Aucun restaurant trouvé.</div>
                    </div>
                {% endfor %}
            </div>

        {% else %}
            {% for category in categories %}
                {% if category.restaurants is not empty %}
                    <section class="mb-5">
                        <h3 class="h5 bg-primary text-white d-inline-block rounded px-3 py-2 mb-3">
                            {{ category.name }}
                        </h3>

                        <div class="row flex-nowrap overflow-auto pb-3 g-3">
                            {% for restaurant in category.restaurants %}
                                <div class="col-10 col-md-5 col-lg-3">
                                    <div class="card h-100 border-0">
                                        <div class="ratio ratio-16x9 card-img-top bg-light">
                                            {% if restaurant.image %}
                                                <img src="{{ asset('images/restaurants/' ~ restaurant.image) }}" class="object-fit-cover" alt="{{ restaurant.name }}">
                                            {% else %}
                                                <div class="d-flex align-items-center justify-content-center text-muted">
                                                    <small>Pas d'image</small>
                                                </div>
                                            {% endif %}
                                        </div>

                                        <div class="card-body d-flex flex-column">
                                            <h5 class="card-title h6 fw-bold text-truncate">{{ restaurant.name }}</h5>
                                            <p class="card-text small text-muted text-truncate">{{ restaurant.description }}</p>

                                            <div class="d-grid">
                                                <a href="{{ path('app_order_create', {id: restaurant.id}) }}" class="btn btn-primary">Commander</a>
                                                <a href="{{ path('app_reservation_create', {id: restaurant.id}) }}" class="btn btn-primary">Réserver</a>
                                                <a href="{{ path('app_restaurant_show', {id: restaurant.id}) }}" class="btn btn-outline-secondary btn-sm">Détails</a>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            {% endfor %}
                        </div>
                    </section>
                {% endif %}
            {% else %}
                <div class="alert alert-light text-center py-5">
                    <p class="lead text-muted mb-0">Aucune catégorie disponible.</p>
                </div>
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}
