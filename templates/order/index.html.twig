{% extends 'base.html.twig' %}

{% block title %}Mes Commandes{% endblock %}

{% block main %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <a href="{{ path('app_home') }}" class="btn btn-secondary">Retour à l'accueil</a>
        </div>

        {% for order in orders %}
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        {{ order.orderDate|date('d/m/Y à H:i') }}
                    </h5>
                    <div class="text-muted">
                        Chez {{ order.restaurant.name }}
                    </div>
                </div>

                <div class="card-body">
                    <div class="mb-3">
                        {% if order.orderType == 'S' %}
                            <div class="badge bg-primary">Sur place</div>
                        {% elseif order.orderType == 'E' %}
                            <div class="badge bg-info text-dark">A emporter</div>
                        {% elseif order.orderType == 'L' %}
                            <div class="badge bg-warning text-dark">Livraison</div>
                        {% endif %}

                        {% if order.status == 'C' %}
                            <div class="badge bg-secondary">En attente</div>
                        {% else %}
                            <div class="badge bg-success">{{ order.status }}</div>
                        {% endif %}
                    </div>

                    <ul class="list-group list-group-flush mb-3">
                        {% set total = 0 %}

                        {% for item in order.orderItems %}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    {{ item.quantity }}x {{ item.dish.name }}
                                </div>
                                <div>
                                {{ (item.dish.price * item.quantity) / 100 }} €
                            </div>
                            </li>

                            {% set total = total + (item.dish.price * item.quantity) %}
                        {% endfor %}
                    </ul>

                    <div class="d-flex justify-content-end">
                        <h4 class="fw-bold">
                            Total : {{ total / 100 }} €
                        </h4>
                    </div>
                </div>
            </div>

        {% else %}
            <div class="alert alert-info text-center">
                Aucune commande
            </div>
        {% endfor %}
    </div>
{% endblock %}
