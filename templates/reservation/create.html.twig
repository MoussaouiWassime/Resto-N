{% extends 'base.html.twig' %}

{% block title %}Réserver{% endblock %}

{% block main %}
    {% if error %}
        <div class="alert alert-danger">
            {{ error }}
        </div>
    {% endif %}

    <div>
        <h5>Horaires d'ouverture</h5>
        <p>
            {% if restaurant.openingTime and restaurant.closingTime %}
                Ce restaurant est ouvert de {{ restaurant.openingTime|date('H:i') }} à {{ restaurant.closingTime|date('H:i') }}
            {% else %}
                Ce restaurant est ouvert 24h/24.
            {% endif %}
        </p>
    </div>

    {{ form_start(form) }}

    {{ form_row(form.reservationDate) }}
    {{ form_row(form.numberOfPeople) }}

    <button type="submit">Valider</button>

    <a href="{{ path('app_home') }}">Annuler</a>

    {{ form_end(form) }}
{% endblock %}
