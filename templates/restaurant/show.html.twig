{% extends 'base.html.twig' %}

{% block title %}{{ restaurant.name }}{% endblock %}

{% block main %}
    <div class="container py-5">
        <section class="mb-5">
            <h2 class="h4 border-bottom pb-2 mb-4">Notre Carte</h2>
            {% if restaurant.dishes is empty %}
                <div class="alert alert-secondary">Aucun plat disponible pour le moment.</div>
            {% else %}
                <div class="d-flex flex-nowrap overflow-auto pb-4 gap-3">
                    {% for dish in restaurant.dishes %}
                        <div class="card border-0 flex-shrink-0 rounded-3" style="width: 260px;">
                            <div class="ratio ratio-1x1">
                                <img src="{{ asset('images/dishes/' ~ dish.photo) }}" class="card-img-top object-fit-cover rounded-top-3" alt="{{ dish.name }}">
                            </div>
                            <div class="card-body d-flex flex-column">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="card-title h6 fw-bold text-truncate mb-0" title="{{ dish.name }}">
                                        {{ dish.name }}
                                    </h5>
                                    <span class="badge bg-primary rounded-pill ms-2">{{ dish.price }} ‚Ç¨</span>
                                </div>
                                <p class="card-text small text-muted text-truncate mb-3">
                                    {{ dish.description }}
                                </p>
                                <div class="mt-auto d-grid gap-2">
                                    <a href="{{ path('app_dish_show', {id: dish.id}) }}" class="btn btn-outline-primary btn-sm">
                                        Voir
                                    </a>
                                </div>
                                {% if role and role.isOwner %}
                                    <div class="mt-2 d-flex justify-content-between border-top pt-2">
                                        <a href="{{ path('app_dish_update', {id: dish.id}) }}" class="text-decoration-none small text-secondary">Modifier</a>
                                        <a href="{{ path('app_dish_delete', {id: dish.id}) }}" class="text-decoration-none small text-danger">Supprimer</a>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </section>

        <div class="row g-4 mb-5">
            <div class="col-lg-8">
                <div class="card border-0 h-100">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h1 class="h3 fw-bold mb-0">{{ restaurant.name }}</h1>
                            {% if averageRating %}
                                <span class="badge bg-warning text-dark">‚òÖ {{ averageRating|number_format(1) }}</span>
                            {% endif %}
                        </div>
                        <p class="card-text text-secondary lead">{{ restaurant.description }}</p>

                        <div class="border-top pt-3 mt-4 text-muted small">
                            <i class="bi bi-geo-alt-fill me-1"></i>
                            {{ restaurant.address }}, {{ restaurant.postalCode }} {{ restaurant.city }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card border-0 bg-light">
                    <div class="card-body p-4 d-grid gap-3">
                        <a href="{{ path('app_order_create', {id: restaurant.id}) }}" class="btn btn-primary btn-lg fw-bold">
                            Commander
                        </a>
                        <a href="{{ path('app_reservation_create', {id: restaurant.id}) }}" class="btn btn-outline-primary btn-lg">
                            R√©server une table
                        </a>

                        {% if role %}
                            <hr class="text-secondary">
                            <a href="{{ path('app_restaurant_manage', {id: restaurant.id}) }}" class="btn btn-dark">
                                Espace Gestion
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <section class="row justify-content-center mb-5">
            <div class="col-lg-8">
                <div class="border-top pt-5">
                    <h3 class="h5 mb-4">Avis clients</h3>

                    {% if app.user and reviewForm and not userReview %}
                        <div class="card bg-light border-0 mb-4">
                            <div class="card-body">
                                {{ form_start(reviewForm) }}
                                <div class="row g-3 align-items-end">
                                    <div class="col-md-3">
                                        {{ form_label(reviewForm.rating, 'Note', {'label_attr': {'class': 'form-label small text-muted'}}) }}
                                        {{ form_widget(reviewForm.rating, {'attr': {'class': 'form-select form-select-sm'}}) }}
                                    </div>
                                    <div class="col-md-7">
                                        {{ form_label(reviewForm.comment, 'Commentaire', {'label_attr': {'class': 'form-label small text-muted'}}) }}
                                        {{ form_widget(reviewForm.comment, {'attr': {'class': 'form-control form-control-sm', 'rows': 1, 'placeholder': 'Votre exp√©rience...'}}) }}
                                    </div>
                                </div>
                                <div class="text-danger small mt-2">
                                    {{ form_errors(reviewForm.rating) }}
                                    {{ form_errors(reviewForm.comment) }}
                                </div>
                                {{ form_end(reviewForm) }}
                            </div>
                        </div>
                    {% endif %}

                    <div class="bg-white rounded p-4">
                        <div class="list-group list-group-flush">
                            {% for review in reviews %}
                                <div class="list-group-item border-bottom px-0 py-3">

                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="fw-bold fs-6">{{ review.user.firstName }}</span>
                                        <span class="text-warning small">
                                            {% for i in 1..5 %}
                                                {{ i <= review.rating ? '‚òÖ' : '‚òÜ' }}
                                            {% endfor %}
                                        </span>
                                    </div>

                                    <p class="text-secondary small mb-2 text-break">
                                        {{ review.comment|nl2br }}
                                    </p>

                                    {% if app.user and app.user == review.user %}
                                        <div class="d-flex justify-content-end gap-2">
                                            <a href="{{ path('app_review_update', {id: review.id}) }}" class="btn btn-sm btn-light text-primary border py-0 px-2" style="font-size: 0.8rem;">
                                                ‚úèÔ∏è Modifier
                                            </a>
                                            <a href="{{ path('app_review_delete', {id: review.id}) }}" class="btn btn-sm btn-light text-danger border py-0 px-2" style="font-size: 0.8rem;">
                                                üóëÔ∏è Supprimer
                                            </a>
                                        </div>
                                    {% endif %}

                                </div>
                            {% else %}
                                <div class="text-center py-3 text-muted small fst-italic">
                                    Aucun avis pour le moment.
                                </div>
                            {% endfor %}
                        </div>
                    </div>

                </div>
            </div>
        </section>
    </div>
{% endblock %}
