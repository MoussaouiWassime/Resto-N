{% extends 'base.html.twig' %}

{% block title %}Connection{% endblock %}

{% block main %}
    <div class="container mt-3">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger mb-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ logout_path() }}">Déconnexion</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Veuillez vous connecter</h1>
            <div class="mb-3"><label for="username">Email</label></div>
            <div class="mb-3"><input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus></div>
            <div class="mb-3"><label for="password">Mot de passe</label></div>
            <div class="mb-3"><input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required></div>
            <div class="mb-3"><input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}"></div>

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <input type="checkbox" name="_remember_me" id="_remember_me">
                    <label for="_remember_me">Remember me</label>
                </div>
            #}
            <div class="mb-3">
                <button class="btn btn-lg btn-primary w-100 mt-3" type="submit">
                    Se connecter
                </button>
            </div>
    </form>
    </div>
{% endblock %}
