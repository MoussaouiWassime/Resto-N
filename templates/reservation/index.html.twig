{% extends 'base.html.twig' %}

{% block title %}Reservations{% endblock %}

{% block main %}
    <div class="d-flex justify-content-between align-items-center mb-4">
    <a href="{{ path('app_home') }}" class="btn btn-secondary">Retour à l'accueil</a>
    <a href="{{ path('app_profile_show') }}" class="btn btn-secondary">Retour au profil</a>
    </div>
        {% for reservation in reservations %}
            <ul>
            <li>
                <strong>{{ reservation.restaurant.name }}</strong>
                <span class="badge bg-primary">{{ reservation.reservationDate|date('d/m/Y H:i') }}</span>
                <span class="badge bg-info">({{ reservation.numberOfPeople }} pers.)</span>
                {% if reservation.restaurantTable %}
                    <span class="badge bg-success">Table {{ reservation.restaurantTable.number }}</span>
                {% endif %}

                <a href="{{ path('app_reservation_update', {'id': reservation.id}) }}" class="btn btn-sm btn-warning">
                    Modifier
                </a>
                <a href="{{ path('app_reservation_delete', {'id': reservation.id}) }}" class="btn btn-sm btn-danger">
                    Supprimer
                </a>
            </li>
            </ul>
        {% else %}
            <div class="alert alert-info text-center">
            Aucune réservation.
            </div>
        {% endfor %}
{% endblock %}
