{{ form_start(form) }}
<div class="mb-3">
    {{ form_row(form.name, {attr: {class: 'form-select'}}) }}
</div>

<div class="mb-3">
    {{ form_row(form.description, {attr: {class: 'form-control'}}) }}
</div>

<div class="mb-3">
    {{ form_row(form.price, {attr: {class: 'form-control'}}) }}
</div>

<div class="mb-3">
    {{ form_row(form.photo, {attr: {class: 'form-control'}}) }}
</div>

<div class="mb-3">
    {{ form_row(form.category, {attr: {class: 'form-control'}}) }}
</div>
<button type="submit" class="btn btn-primary w-100 p-3 mt-3">
    {{ submit_label|default('Enregistrer') }}
</button>
{{ form_end(form) }}
