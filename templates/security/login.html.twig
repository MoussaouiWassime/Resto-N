{% extends 'base.html.twig' %}

{% block title %}Connexion - Resto'N{% endblock %}

{% block main %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">

                <div class="card shadow border-0">
                    <div class="card-header bg-primary text-white text-center py-4">
                        <h3 class="mb-1 fw-bold">üîê Connexion</h3>
                        <p class="mb-0 text-white-50 small">Heureux de vous revoir !</p>
                    </div>

                    <div class="card-body p-4 p-md-5">
                        <form method="post">

                            {% if error %}
                                <div class="alert alert-danger d-flex align-items-center shadow-sm" role="alert">
                                    <span class="me-2 fs-5">‚ö†Ô∏è</span>
                                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                </div>
                            {% endif %}

                            {% if app.user %}
                                <div class="alert alert-info">
                                    Vous √™tes d√©j√† connect√© en tant que <strong>{{ app.user.userIdentifier }}</strong>.
                                    <div class="mt-2">
                                        <a href="{{ logout_path() }}" class="btn btn-sm btn-outline-info">Se d√©connecter</a>
                                    </div>
                                </div>
                            {% endif %}

                            <div class="mb-3">
                                <label for="username" class="form-label fw-bold text-secondary small">Adresse Email</label>
                                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control form-control-lg" autocomplete="email" placeholder="exemple@email.com" required autofocus>
                            </div>

                            <div class="mb-4">
                                <label for="password" class="form-label fw-bold text-secondary small">Mot de passe</label>
                                <input type="password" name="_password" id="password" class="form-control form-control-lg" autocomplete="current-password" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" required>
                            </div>

                            <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                            <div class="d-grid gap-2 mb-4">
                                <button class="btn btn-primary btn-lg shadow-sm" type="submit">
                                    Se connecter
                                </button>
                            </div>

                            <div class="text-center pt-3 border-top">
                                <span class="text-muted small">Pas encore de compte ?</span>
                                <a href="{{ path('app_register') }}" class="text-decoration-none fw-bold ms-1">
                                    Inscrivez-vous
                                </a>
                            </div>

                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
