{% extends 'base.html.twig' %}

{% block title %}Mes Commandes{% endblock %}

{% block main %}
    <div class="container mt-4">
        {% for order in orders %}
            <div class="card mb-4 border-0 shadow-sm">
                <div class="card-header bg-white border-bottom d-flex flex-wrap justify-content-between align-items-center py-3">
                    <div>
                        <h5 class="mb-0 text-primary fw-bold">{{ order.restaurant.name }}</h5>
                        <small class="text-muted">üìÖ {{ order.orderDate|date('d/m/Y √† H:i') }}</small>
                    </div>

                    <div class="d-flex gap-2 align-items-center mt-2 mt-md-0">
                        {% if order.orderType.value == 'S' %}
                            <span class="badge bg-info text-dark">üçΩÔ∏è Sur place</span>
                        {% elseif order.orderType.value == 'E' %}
                            <span class="badge bg-warning text-dark">üõçÔ∏è A emporter</span>
                        {% else %}
                            <span class="badge bg-primary">üöö Livraison</span>
                        {% endif %}

                        {% if order.status.value == 'A' %}
                            <span class="badge bg-danger">Annul√©e</span>
                        {% elseif order.status.value == 'L' %}
                            <span class="badge bg-success">Livr√©e / Termin√©e</span>
                        {% elseif order.status.value == 'P' %}
                            <span class="badge bg-info">Pr√™te</span>
                        {% else %}
                            <span class="badge bg-secondary">En pr√©paration</span>
                        {% endif %}
                    </div>
                </div>

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm table-borderless mb-0">
                            {% set total = 0 %}
                            <tbody>
                            {% for item in order.orderItems %}
                                <tr>
                                    <td class="fw-bold text-secondary" style="width: 50px;">{{ item.quantity }}x</td>
                                    <td>{{ item.dish.name }}</td>
                                    <td class="text-end">{{ (item.dish.price * item.quantity) / 100 }} ‚Ç¨</td>
                                </tr>
                                {% set total = total + (item.dish.price * item.quantity) %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card-footer bg-light d-flex justify-content-between align-items-center">
                    <span class="text-muted small">Num√©ro de commande #{{ order.id }}</span>
                    <span class="fs-5 fw-bold text-dark">Total : {{ total / 100 }} ‚Ç¨</span>
                </div>
            </div>
        {% else %}
            <div class="text-center py-5">
                <div class="fs-1 mb-3">üçΩÔ∏è</div>
                <h3 class="text-muted">Vous n'avez pas encore pass√© de commande.</h3>
                <a href="/" class="btn btn-primary mt-3">Trouver un restaurant</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
