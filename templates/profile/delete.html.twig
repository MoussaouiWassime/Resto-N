{% extends 'base.html.twig' %}

{% block title %}Supprimer mon compte{% endblock %}

{% block main %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">

                <div class="card border-danger shadow">
                    <div class="card-header bg-danger text-white text-center py-3">
                        <h4 class="mb-0">Suppression</h4>
                    </div>

                    <div class="card-body text-center p-4">

                        <h5 class="card-title fw-bold">Êtes-vous sûr de vouloir partir ?</h5>

                        <p class="card-text text-muted my-3">
                            La suppression de votre compte est <strong>définitive et irréversible</strong>.<br>
                            Vous perdrez l'accès à votre historique de commandes et vos restaurants.
                        </p>

                        {{ form_start(form) }}
                        <div class="d-grid gap-3 mt-4">
                            {{ form_widget(form.cancel, {
                                label: 'Annuler',
                                attr: {class: 'btn btn-outline-secondary btn-lg'}
                            }) }}

                            {{ form_widget(form.delete, {
                                label: 'Supprimer mon compte définitivement',
                                attr: {class: 'btn btn-danger'}
                            }) }}
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
