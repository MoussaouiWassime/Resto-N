{% extends 'base.html.twig' %}

{% block title %} Suppression du plat : {{ dish.name }} {% endblock %}

{% block main %}

    <div class="container mt-3">
        <div class="mb-3">
            <div class="alert alert-warning" role="alert">
                <strong>Attention !</strong> Êtes-vous sûr de vouloir supprimer votre plat ? Cette action est irréversible.
            </div>
        </div>
        {{ form_start(form) }}
        <div class="mb-3">
            {{ form_row(form.delete, {label: 'Supprimer', attr: {class: 'btn btn-primary'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.cancel, {label: 'Annuler', attr: {class: 'btn btn-secondary'}}) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
