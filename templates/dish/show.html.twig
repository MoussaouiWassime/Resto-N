{% extends 'base.html.twig' %}

{% block title %}Plat : {{ dish.name }}{% endblock %}

{% block main %}
    <div class="container mt-4">
        <div class="card p-4">
            <div class="row align-items-center">
                <div class="col-md-5 dish-image-container">
                    <img src="{{ asset('images/dishes/' ~ dish.photo) }}"
                         class="img-fluid"
                         alt="Photo de {{ dish.name }}">
                </div>

                <div class="col-md-7">
                    <h1 class="display-5 text-dark mb-3">{{ dish.name }}</h1>
                    <p class="lead text-muted mb-4">
                        {{ dish.description }}
                    </p>

                    <div class="d-flex align-items-center justify-content-between">
                        <span class="price-tag">{{ dish.price }} €</span>

                        <button class="btn btn-primary btn-lg">Commander</button>
                    </div>

                    <hr class="my-4">

                    <div class="mt-3">
                        <a href="{{ path('app_restaurant_show', {id: dish.restaurant.id}) }}" class="btn btn-outline-secondary btn-sm">
                            ← Retour au restaurant
                        </a>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('app_dish_update', {id: dish.id}) }}" class="btn btn-warning btn-sm ms-2">Modifier</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
