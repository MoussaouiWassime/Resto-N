{% block main %}
    <ul class="list-group nav container mt-4">
        {% for dish in dishes %}
            <li class="list-group-item nav-item">
                <a class="nav-link h-100 d-flex flex-column" href="{{ path('app_dish_show', {id: dish.id}) }}">

                    <div class="mb-3 rounded overflow-hidden" style="height: 180px; width: 100%;">
                        {% if dish.photo %}
                            <img src="{{ asset('images/dishes/' ~ dish.photo) }}"
                                 alt="{{ dish.name }}"
                                 style="width: 100%; height: 100%; object-fit: cover;">
                        {% else %}
                            <div class="bg-light w-100 h-100 d-flex align-items-center justify-content-center text-muted">
