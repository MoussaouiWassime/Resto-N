{% extends 'base.html.twig' %}

{% block title %}Supprimer mon avis{% endblock %}

{% block main %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card border-danger shadow">
                    <div class="card-header bg-danger text-white text-center py-3">
                        <h4 class="mb-0">üóëÔ∏è Supprimer l'avis</h4>
                    </div>

                    <div class="card-body text-center p-4">
                        <h5 class="fw-bold mb-3">Voulez-vous retirer votre note ?</h5>
                        <p class="text-muted mb-4">
                            Vous allez supprimer votre avis pour le restaurant <br>
                            <strong>{{ review.restaurant.name }}</strong>.
                        </p>

                        {{ form_start(form) }}
                        <div class="d-grid gap-3">
                            {{ form_widget(form.cancel, {
                                label: 'Non, garder mon avis',
                                attr: {class: 'btn btn-secondary'}
                            }) }}

                            {{ form_widget(form.delete, {
                                label: 'Oui, supprimer d√©finitivement',
                                attr: {class: 'btn btn-outline-danger'}
                            }) }}
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
